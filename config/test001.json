{
	"config" : {
		"datadir" : "/tmp/nsyslog",
		"input" : {"buffer" : 1000},
		"process" : {"buffer": 1000}
	},

	"inputs" : {
		"glob" : {
			"type" : "glob",
			"config" : {
				"path" : "/var/log/*.log"
			}
		}
	},

	"processors" : {
		"timestamp" : {
			"type" : "timestamp",
			"config" : {}
		}
	},

	"transporters" : {
		"file1" : {
			"type" : "file",
			"config" : {
				"format" : "${originalMessage}",
				"path" : "/var/log/nsyslog/test001_out.log"
			}
		},
		"mongo" : {
			"type" : "mongo",
			"config" : {
				"url" : "mongodb://localhost:27017/test",
				"collection" : "syslog"
			}
		},
		"log" : {
			"type" : "console",
			"config" : {"format" : "${originalMessage}", "level" : "log"}
		}
	},

	"flows" : [
		{"from":"${input}=='glob'", "processors":["timestamp"], "transporters":"mongo"}
	]
}
