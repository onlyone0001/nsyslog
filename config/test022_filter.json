{
	"config" : {
		"datadir" : "/tmp/nsyslog",
		"input" : {"buffer" : 1000},
		"process" : {"buffer": 1000}
	},

	"inputs" : {
		"file" : {
			"type" : "file",
			"config" : {
				"path" : "/var/log/**/*.json",
				"watch" : false,
				"readmode" : "offset",
				"offset" : "start"
			}
		}
	},

	"processors" : {
		"json" : {
			"type" : "jsonparser",
			"config" : {}
		},
		"timestamp" : {
			"type" : "timestamp",
			"config" : {
				"output" : "ets"
			}
		},

		"filter_flow" : {
			"type" : "filter",
			"config" : {
				"mode" : "accept",
				"filter" : "${event_type}=='flow'"
			}
		},

		"aggregate" : {
			"type" : "filter",
			"config" : {
				"mode" : "every",
				"every" : 100,
				"key" : "${src_ip}",
				"output" : "count"
			}
		}
	},

	"transporters" : {
		"console" : {
			"type" : "console",
			"config" : {
				"format" : "${src_ip} - ${dest_ip}: ${count}"
			}
		},
		"null" : {
			"type" : "null"
		}
	},

	"flows" : [
		{"from":"file", "processors":["json","filter_flow","aggregate"], "transporters":["console"], "mode":"parallel"}
	]
}
