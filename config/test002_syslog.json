{
	"config" : {
		"datadir" : "/tmp/nsyslog",
		"input" : {"buffer" : 1000},
		"process" : {"buffer": 1000}
	},

	"inputs" : {
		"syslog" : {
			"type" : "syslog",
			"config" : {
				"url" : "udp://0.0.0.0:514"
			}
		}
	},

	"processors" : {
		"timestamp" : {
			"type" : "timestamp",
			"config" : {}
		}
	},

	"transporters" : {
		"log" : {
			"type" : "console",
			"config" : {"format" : "${originalMessage}", "level" : "log"}
		}
	},

	"flows" : [
		{"from":"${input}=='syslog'", "processors":["timestamp"], "transporters":["log"], "mode":"parallel"}
	]
}
